<!DOCTYPE html>
<html>
  <head>
    <title>Poemworld</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
 
    
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <% if user_signed_in? %>
          <%= link_to "poem app", root_path, id: "logo" %>
          <nav>
            <ul class="nav navbar-nav navbar-right">
              <li><%= link_to "poems",  poems_path  %></li>
              <li><%= link_to "Log out", destroy_user_session_path, method: :delete %></li>
            </ul>
          </nav>
        <% else %>
          <%= link_to "poem app", home_path, id: "logo" %>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "登録",  new_user_registration_path %></li>
            <li><%= link_to "Log in", user_session_path %></li>
          </ul>
        <% end %>
        
      </div>
    </header>
    <%= yield %>
  </body>
</html>
